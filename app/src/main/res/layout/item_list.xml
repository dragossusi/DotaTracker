<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Who Won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_item2"
        android:layout_alignParentEnd="true"
        android:textSize="22sp"
        android:textAlignment="textEnd"
        android:layout_toEndOf="@+id/txt_duration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Duration"
        android:textSize="22sp"
        android:id="@+id/txt_duration"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_hero" />

    <TextView
        android:text="Idddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_item1"
        android:textSize="22sp"
        android:textAlignment="center"
        android:paddingEnd="2dp"
        android:layout_below="@+id/txt_item2"
        android:layout_alignStart="@+id/txt_duration"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/img_hero"
        android:gravity="bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_hero"
        app:srcCompat="@drawable/abaddon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>