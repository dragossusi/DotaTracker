<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView.Margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_cardview"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_hero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abaddon" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_little"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_hero_name"
                style="@style/TextView.HeroName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abaddon" />

            <TextView
                android:id="@+id/text_lane"
                style="@style/TextView.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="where" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_little"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_win"
                style="@style/TextView.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:text="Who Won" />

            <TextView
                android:id="@+id/text_skill"
                style="@style/TextView.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal Skill" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_little"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_duration"
                style="@style/TextView.Primary"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="Duration" />
            <TextView
                android:id="@+id/text_when"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="yesterday"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>